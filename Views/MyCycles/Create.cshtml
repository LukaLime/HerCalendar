@model HerCalendar.Models.CycleTracker

@{
    ViewData["Title"] = "Create";
}

<h2>My Cycle Tracker</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastPeriodStartDate" class="control-label"></label>
                <input asp-for="LastPeriodStartDate" class="form-control" />
                <span asp-validation-for="LastPeriodStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextPeriodStartDate" class="control-label"></label>
                <input asp-for="NextPeriodStartDate" class="form-control" type="date" />
                <span asp-validation-for="NextPeriodStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
