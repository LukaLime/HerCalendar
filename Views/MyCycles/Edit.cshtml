@model HerCalendar.Models.CycleTracker

@{
    ViewData["Title"] = "Edit";
}

<h2>My Cycle Tracker: Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LastPeriodStartDate" class="control-label"></label>
                <input name="LastPeriodStartDate" class="form-control" type="date" value="@Model.LastPeriodStartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="LastPeriodStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextPeriodStartDate" class="control-label"></label>
                <input name="NextPeriodStartDate" class="form-control" type="date" value="@Model.NextPeriodStartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="NextPeriodStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
