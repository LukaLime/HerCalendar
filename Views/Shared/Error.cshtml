@model ErrorViewModel
@{
    ViewData["Title"] = "Maintenance";
}

<div style="text-align: center; padding: 60px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div style="max-width: 600px; margin: auto; background-color: #fff; padding: 40px; border-radius: 12px; box-shadow: 0 0 20px rgba(0,0,0,0.1);">
        <div style="font-size: 3em; margin-bottom: 20px;">🔧🛠️</div>
        <h1 style="color: #cc0000;">Hold On — We're Brewing Something Fresh!</h1>
        <p style="font-size: 1.2em; line-height: 1.6; margin-top: 20px;">
            Our database is currently enjoying a strong cup of maintenance blend ☕
        </p>
        <p style="font-size: 1.2em; line-height: 1.6;">
            We’ll be back up and running — fully caffeinated — by <strong>July 1, 2025</strong>
        </p>
        <p style="margin-top: 20px;">Thank you for your patience and understanding!</p>
    </div>
</div>

